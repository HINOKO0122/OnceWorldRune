<body onload="runSimulation()"> <div class="card">
    <h1>装備強化MAX・最適ルーン</h1>
    
    <div class="input-area">
        <p>所持しているルーン石板の総数</p>
        <input type="number" id="runeInput" value="100">
        <button onclick="runSimulation()">計算！</button>
        <div class="info">※安全係数0.9を適用：上位 <span id="safeLimit">0</span>枚を配置</div>
    </div>

    <div id="summaryArea" style="margin-bottom:15px; font-weight:bold; font-size:1.1em; color:#00ff00;"></div>
    
    <div id="output">
        </div>
</div>

<script>
function runSimulation() {
    const totalRunes = parseInt(document.getElementById('runeInput').value) || 0;
    const safeLimit = Math.floor(totalRunes * 0.9);
    document.getElementById('safeLimit').innerText = safeLimit;

    let allOptions = [];
    for (let n = 2; n <= 100; n++) {
        let baseProb = (101 - n) / 100;
        let currentP = baseProb;
        while (currentP < 1.0) {
            let nextP = Math.min(1.0, currentP + 0.1);
            let saving = (1 / currentP) - (1 / nextP);
            allOptions.push({ stage: n, saving: saving });
            currentP = nextP;
        }
    }

    allOptions.sort((a, b) => b.saving - a.saving);
    let selection = allOptions.slice(0, safeLimit);
    let summaryMap = {};
    let totalSaved = 0;

    selection.forEach(opt => {
        summaryMap[opt.stage] = (summaryMap[opt.stage] || 0) + 1;
        totalSaved += opt.saving;
    });

    document.getElementById('summaryArea').innerText = "素材の節約期待値: 約 " + totalSaved.toFixed(1) + " 個分";

    let html = "<table><tr><th>強化回数</th><th>元の確率</th><th>石板使用数</th><th>強化後</th></tr>";
    for (let n = 100; n >= 2; n--) {
        if (summaryMap[n]) {
            let base = (101 - n);
            let finalP = Math.min(100, base + (summaryMap[n] * 10));
            html += `<tr class="res-row"><td>${n}回目</td><td>${base}%</td><td><b>${summaryMap[n]}枚</b></td><td>${finalP}%</td></tr>`;
        }
    }
    html += "</table>";
    document.getElementById('output').innerHTML = html;
}
</script>
</body>
</html>
