        button { padding: 10px 20px; font-size: 18px; background: #e74c3c; color: white; border: none; border-radius: 4px; cursor: pointer; transition: 0.3s; }
        button:hover { background: #c0392b; }
        .result-table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        .result-table th, .result-table td { padding: 12px; border: 1px solid #eee; text-align: center; }
